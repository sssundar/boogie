<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="horizontal"
    tools:context="sssundar.revb.boogie.MessengerActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/black"
        android:orientation="vertical"
        android:divider="@drawable/spacer_medium"
        android:showDividers="middle" >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/messagecontainerhigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/sudha_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:enabled="true"
                android:src="@drawable/sudha_read_selector"
                />

            <ImageButton
                android:id="@+id/mani_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:enabled="true"
                android:src="@drawable/mani_read_selector"
                />

            <ImageButton
                android:id="@+id/sushant_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:enabled="true"
                android:src="@drawable/sushant_read_selector"
                />
        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/messagecontainerhighmid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/sudha_highmid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:enabled="true"
                android:src="@drawable/sudha_read_selector"
                />

            <ImageButton
                android:id="@+id/mani_highmid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:enabled="true"
                android:src="@drawable/mani_read_selector"
                />

            <ImageButton
                android:id="@+id/sushant_highmid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:enabled="true"
                android:src="@drawable/sushant_read_selector"
                />
        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/messagecontainermid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/sudha_mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:enabled="true"
                android:src="@drawable/sudha_read_selector"
                />

            <ImageButton
                android:id="@+id/mani_mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:enabled="true"
                android:src="@drawable/mani_read_selector"
                />

            <ImageButton
                android:id="@+id/sushant_mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:enabled="true"
                android:src="@drawable/sushant_read_selector"
                />
        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/messagecontainerlowmid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/sudha_lowmid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:enabled="true"
                android:src="@drawable/sudha_read_selector"
                />

            <ImageButton
                android:id="@+id/mani_lowmid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:enabled="true"
                android:src="@drawable/mani_read_selector"
                />

            <ImageButton
                android:id="@+id/sushant_lowmid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:enabled="true"
                android:src="@drawable/sushant_read_selector"
                />
        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/messagecontainerlow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/sudha_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:enabled="true"
                android:src="@drawable/sudha_read_selector"
                />

            <ImageButton
                android:id="@+id/mani_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:enabled="true"
                android:src="@drawable/mani_read_selector"
                />

            <ImageButton
                android:id="@+id/sushant_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:enabled="true"
                android:src="@drawable/sushant_read_selector"
                />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/presence_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:enabled="false"
            android:src="@drawable/online_selector" />

        <ImageButton
            android:id="@+id/action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:enabled="true"
            android:src="@drawable/action_selector" />

    </LinearLayout>

    <sssundar.revb.boogie.DrawingView
        android:id="@+id/doodler"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:background="@color/white" />

</LinearLayout>